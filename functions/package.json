{
    "name": "functions",
    "scripts": {
        "lint": "tslint --project tsconfig.json",
        "build": "tsc",
        "serve": "yarn run build && firebase serve --only functions",
        "shell": "yarn run build && firebase functions:shell",
        "start": "yarn run shell",
        "deploy-prod": "firebase deploy --only functions -P entur-mobility && yarn upload-docs",
        "stage": "firebase deploy --only functions -P entur-mobility-staging",
        "logs": "firebase functions:log",
        "docz:dev": "docz dev",
        "docz:build": "docz build",
        "upload-docs": "rsync -R **/*.mdx temp-docs && gsutil -m rsync -d -r temp-docs gs://entur-docs.appspot.com/mobility && rm -rf temp-docs"
    },
    "main": "lib/index.js",
    "dependencies": {
        "@types/superagent": "^4.1.1",
        "firebase-admin": "~7.0.0",
        "firebase-functions": "3.1.0",
        "superagent": "^5.0.2"
    },
    "devDependencies": {
        "docz": "1.2.0",
        "docz-theme-default": "1.2.0",
        "tslint": "^5.12.0",
        "typescript": "^3.2.2"
    },
    "private": true,
    "engines": {
        "node": "8"
    }
}
